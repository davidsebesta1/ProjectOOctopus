<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectOOctopus.Pages.ExportPopup"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             BackgroundColor="#88000000"
             Title="ExportPopup">
    <Frame WidthRequest="300" HeightRequest="400" BackgroundColor="#EE333333" Padding="15">
        <VerticalStackLayout Spacing="20" Padding="0,15,0,0">
            <Label Text="Export Path:" FontSize="18"/>
            <Label x:Name="TargetDirectoryPathLabel" WidthRequest="250"/>
            <Button Text="Select Path" Clicked="SelectPathButton_Clicked"/>
            <Button Text="Export" Clicked="ExportButton_Clicked"/>
        </VerticalStackLayout>
    </Frame>
</mopups:PopupPage>